    bindsym n exec "play $sound_path/YTP_BNT/Bravo_Patron.mp3"
    bindsym h exec "play $sound_path/YTP_BNT/hohohohoo.mp3"
    bindsym j exec "play $sound_path/YTP_BNT/Je_suis_dans_le_bendo.mp3"
