[
  {
    "dotdrop": "{{@@ header() @@}}",
    "name": "top",
    "layer": "top",
    "output": "eDP-1",
    "margin-top": 2,
    "margin-bottom": 7,
    "modules-left": [
      "hyprland/workspaces"
    ],
    "modules-center": [
      "hyprland/submap",
      "hyprland/window"
    ],
    "modules-right": [
      "battery",
      "custom/audio-idle-inhibitor",
      "bluetooth",
      "pulseaudio",
      "custom/notification",
      "hyprland/language",
      "clock",
      "tray"
    ],
    "hyprland/window": {
      "max-length": 70
    },
    "hyprland/language": {
      "format": "Û∞åå {}",
      "format-en": "us",
      "format-fr": "fr"
    },
    "battery": {
      "format": "{icon} {capacity:2}% {time} {power:0.2f}W",
      "format-full": "{icon} {capacity:2}%",
      "format-icons": [
        "Û∞Å∫",
        "Û∞Åª",
        "Û∞Åº",
        "Û∞ÅΩ",
        "Û∞Åæ",
        "Û∞Åø",
        "Û∞ÇÄ",
        "Û∞ÇÅ",
        "Û∞ÇÇ",
        "Û∞Åπ"
      ],
      "states": {
        "full": 100,
        "good": 99,
        "ok": 50,
        "warning": 35,
        "bad": 20,
        "critical": 10
      }
    },
    "custom/audio-idle-inhibitor": {
      "format": "{icon}",
      "exec": "sway-audio-idle-inhibit --dry-print-both-waybar",
      "exec-if": "which sway-audio-idle-inhibit",
      "return-type": "json",
      "format-icons": {
        "output": "ÔÖÑ",
        "input": "ÔÑ∞",
        "output-input": "ÔÖÑ  ÔÑ∞",
        "none": ""
      }
    },
    "bluetooth" : {
      "format": "",
      "format-connected": "Û∞Ç∞ {device_alias}",
      "format-connected-battery": "Û∞Ç∞ {device_alias} {device_battery_percentage}%"
    },
    "pulseaudio": {
      "format": "{icon} {volume:2}%",
      "format-bluetooth": "Û∞Ç∞ {volume:2}%",
      "format-muted": "Û∞ùü {volume:2}%",
      "format-icons": {
        "headphone": "Û∞ãã",
        "headset": "Û∞ãã",
        "default": [
          "ÔÄ¶",
          "ÔÄß",
          "ÔÄ®"
        ]
      },
      "on-click": "change-sink.sh"
    },
    "custom/notification": {
      "format": " {icon} ",
      "format-icons": {
        "dnd-none": "Û∞Çõ",
        "none": "Û∞Çö"
      },
      "return-type": "json",
      "exec-if": "which swaync-client",
      "exec": "swaync-client -swb",
      "on-click": "swaync-client -d"
    },
    "clock": {
      "interval": 60,
      "format": "{:%d/%m/%Y - %H:%M}",
      "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    },
    "tray": {
      "icon-size": 16,
      "spacing": 5
    },
    "hyprland/workspaces": {
      "format": "{id}",
    }
  },
  {
    "name": "bottom",
    "layer": "top",
    "position": "bottom",
    "output": "eDP-1",
    "margin-bottom": 3,
    "margin-top": 2,
    "modules-left": [
      "disk"
    ],
    "modules-center": [
      "custom/media"
    ],
    "modules-right": [
      "network#net-wired",
      "network#net-wireless",
      "custom/cpu-temperature",
      "cpu",
      "memory"
    ],
    "disk": {
      "interval": 10,
      "format": "üñ¥ {free}",
      "path": "/"
    },
    "custom/media": {
      "format": "{icon}{}",
      "return-type": "json",
      "format-icons": {
        "Playing": "‚Ä£ ",
        "Paused": "‚è∏ "
      },
      "max-length": 70,
      "exec": "playerctl -a metadata --format '{\"text\": \"{{playerName}}: {{artist}} - {{markup_escape(title)}}\", \"tooltip\": \"{{playerName}} : {{markup_escape(title)}}\", \"alt\": \"{{status}}\", \"class\": \"{{status}}\"}' -F",
      "on-click": "playerctl play-pause"
    },
    "network#net-wired": {
      "interface": "{{@@ wired_network_interface @@}}",
      "interval": 1,
      "format-ethernet": "Û∞àÄ  ÔÅ£ {bandwidthDownOctets} ÔÅ¢ {bandwidthUpOctets}",
      "format-disconnected": ""
    },
    "network#net-wireless": {
      "interface": "{{@@ wireless_network_interface @@}}",
      "interval": 1,
      "format-wifi": "ÔÇû {essid} ÔÅ£ {bandwidthDownOctets} ÔÅ¢ {bandwidthUpOctets}",
      "format-disconnected": ""
    },
    "custom/cpu-temperature": {
      "exec": "~/.config/waybar/scripts/temperature-cpu.sh",
      "return-type": "json",
      "interval": 2,
      "format": "Ôãâ {}¬∞C"
    },
    "cpu": {
      "interval": 2,
      "format": "Û∞çõ {usage:2}%",
      "states": {
        "max": 100,
        "high": 70,
        "medium": 50,
        "light": 30,
        "idle": 10
      }
    },
    "memory": {
      "interval": 2,
      "format": "Óâ¶ {avail:0.2f}G",
      "states": {
        "problem": 100,
        "full": 98,
        "half-full": 70,
        "half": 50,
        "half-empty": 30,
        "empty": 10
      }
    }
  },
  {
    "layer": "top",
    "output": "!eDP-1",
    "margin-top": 2,
    "margin-bottom": 7,
    "modules-left": [
      "hyprland/workspaces"
    ],
    "modules-center": [
      "hyprland/submap",
      "hyprland/window"
    ],
    "modules-right": [
      "clock"
    ],
    "clock": {
      "interval": 60,
      "format": "{:%D - %H:%M}",
      "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    },
    "hyprland/workspaces": {
      "format": "{id}",
    }
  }
]
